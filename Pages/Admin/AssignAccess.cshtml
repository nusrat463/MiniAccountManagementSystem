@page
@model MiniAccountManagementSystem.Pages.Admin.AssignAccessModel
@{
    ViewData["Title"] = "Assign Module Access";
}

<h2>Assign Module Access</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<form method="post">
    <div class="form-group">
        <label asp-for="SelectedRoleId">Select Role</label>
        <select asp-for="SelectedRoleId" asp-items="Model.Roles" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="SelectedModuleId">Select Module</label>
        <select asp-for="SelectedModuleId" asp-items="Model.Modules" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Assign Access</button>
</form>
