@page
@model AssignAccessModel
@{
    ViewData["Title"] = "Assign Module Access Rights";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label>Select Role:</label>
        <select asp-for="SelectedRoleId" class="form-control">
            <option value="">-- Select Role --</option>
            @foreach (var role in Model.Roles)
            {
                <option value="@role.Id">@role.Name</option>
            }
        </select>
    </div>

    <div class="form-group mt-2">
        <label>Select Module:</label>
        <select asp-for="SelectedModuleName" class="form-control">
            <option value="">-- Select Module --</option>
            @foreach (var module in Model.ModuleList)
            {
                <option value="@module.Id">@module.Name</option>
            }
        </select>
    </div>

    <div class="form-check mt-2">
        <input class="form-check-input" type="checkbox" asp-for="CanView" />
        <label class="form-check-label">Can View</label>
    </div>

    <div class="form-check">
        <input class="form-check-input" type="checkbox" asp-for="CanEdit" />
        <label class="form-check-label">Can Edit</label>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save Access</button>
</form>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-success mt-3">
        @ViewData["Message"]
    </div>
}
